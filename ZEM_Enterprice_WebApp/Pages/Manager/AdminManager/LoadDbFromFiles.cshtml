@page
@model ZEM_Enterprice_WebApp.Pages.Manager.AdminManager.LoadDbFromFilesModel
@{
    ViewData["Title"] = "Wczytaj bazę danych";
    Layout = "~/Pages/Shared/_ProfileLayout.cshtml";
}

<div class="login-clean">
    <form method="post"  style="width:100%">
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration">
            <h1 style="color: rgb(71,140,244);font-size: 20px;">Ładowanie kopii zapasowej</h1>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="form-group"><label asp-for="@Model.Date"></label></div>
        <div class="form-group"><input class="form-control" asp-for="@Model.Date"></div>
        <div class="form-group"><button asp-page-handler="DeleteDb" class="btn btn-primary btn-block" type="submit" style="background-color: rgb(255, 0, 0);">Usuń rekordy z bazy</button></div>
        <div class="form-group"><button asp-page-handler="LoadTechnical" class="btn btn-primary btn-block" type="submit" style="background-color: rgb(255, 0, 0);">Załaduj kopię technicznych</button></div>
        <div class="form-group"><button asp-page-handler="LoadDostawy" class="btn btn-primary btn-block" type="submit" style="background-color: rgb(255, 0, 0);">Załaduj kopię dostaw</button></div>
        <div class="form-group"><button asp-page-handler="LoadVTMagazyn" class="btn btn-primary btn-block" type="submit" style="background-color: rgb(255, 0, 0);">Załaduj kopię skanów</button></div>
    </form>
</div>

