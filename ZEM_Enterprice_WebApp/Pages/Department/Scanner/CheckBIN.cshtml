@page
@model ZEM_Enterprice_WebApp.Pages.Department.Scanner.CheckBINModel
@{
    ViewData["Title"] = "Sprawdź BIN";
}

<script src="~/assets/customjs/api.js"></script>
<script src="~/assets/customjs/ScanCommunicate.js"></script>
<div class="login-clean">
    <form style="width: 80vh; max-width: 350px;">
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration">
            <h1 style="color: rgb(71,140,244);font-size: 20px;">Sprawdź BIN</h1>
            <h1 id="bin-label" style="color: rgb(255, 0, 0);font-size: 40px;"></h1>
        </div>
        <div class="form-group"><label>Przewód cięty</label></div>
        <div class="form-group"><input onchange="checkBIN()" class="form-control" type="text" id="code-field"></div>
        <div class="form-group"><button class="btn btn-primary btn-block" type="button" style="background-color: rgb(71,119,244);" onclick="checkBIN()">Sprawdź</button></div>
    </form>
</div>


