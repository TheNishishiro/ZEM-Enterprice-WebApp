@page
@model ZEM_Enterprice_WebApp.Pages.Department.Office.DifferenceReportFormModel
@{
    ViewData["Title"] = "Różnice - formularz";
}

<div class="login-clean">
    <form method="post">
        <h2 class="sr-only">Login Form</h2>
        <div class="illustration">
            <h1 style="color: rgb(71,140,244);font-size: 20px;">Wykaz różnic</h1>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="form-group"><label asp-for="@Model.date"></label></div>
        <div class="form-group"><input class="form-control" asp-for="@Model.date"></div>
        <div class="form-group"><button class="btn btn-primary btn-block" type="submit" style="background-color: rgb(71,119,244);">Generuj raport</button></div>
    </form>
</div>